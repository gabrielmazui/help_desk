{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Project",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "lib/*.c",
                "src/*.c",
                "-Iinclude",
                "-o",
                "${workspaceFolder}/bin/main${env:OS_EXE_EXT}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila todos os arquivos .c em src e lib e inclui headers da pasta include"
        }
    ]
}
